<%= form_for(@user, :html => {:name => "myForm"}) do |f| %>
	
	<p>
		<%= f.label :username %>
		<%= f.text_field :username %>
	</p>
	<p>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</p>
	
	<%= f.submit "Sign Up"%> 
	<%= submit_tag('Log In', :onclick=>"document.myForm.action = 'login';"  ) %>
	
<% end %>